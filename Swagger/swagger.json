  },
  "definitions": {
    "Features": {
      "type": "object",
      "properties": {
        "geometry": {
          "$ref": "#/definitions/Geometry"
        },
        "properties": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            }
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "Feature"
          ]
        }
      }
    },
    "Point2D": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      },
      "example": "[123123,12312]"
    },
    "Geometry": {
      "type": "object",
      "description": "Geometry defining the area of a land charge",
      "discriminator": "type",
      "required": [
        "type"
      ],
      "properties": {
        "coordinates": {
          "type": "object",
          "description": "Should match the definition of; Point, LineString, Polygon's coordinates.",
          "example": "[123123,12312]"
        },
        "type": {
          "type": "string",
          "enum": [
            "Point",
            "LineString",
            "Polygon"
          ],
          "description": "The geometry type"
        }
      }
    },
    "Point": {
      "type": "object",
      "description": "GeoJSon geometry",
      "properties": {
        "coordinates": {
          "$ref": "#/definitions/Point2D"
        }
      }
    },
    "LineString": {
      "type": "object",
      "description": "GeoJSon geometry",
      "properties": {
        "coordinates": {
          "$ref": "#/definitions/Point2D"
        }
      }
    },
    "Polygon": {
      "type": "object",
      "description": "GeoJSon geometry",
      "properties": {
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Point2D"
            }
          }
        }
      }
    },
    "registration-date": {
      "type": "string",
      "description": "Date the charge was added the register. Set by the LLC service when added to register and cannot be subsequently amended",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "format": "date",
      "example": "2017-01-04"
    },
    "charge-type": {
      "description": "The general category of the Charge (e.g. Planning, Financial)",
      "type": "string",
      "example": "Planning",
      "minLength": 1
    },
    "charge-sub-category": {
      "type": "string",
      "description": "The sub-category specific to the Charge type. Valid values of charge-type and charge-sub-category combinations can be found in /validation/categories.py",
      "example": "Planning agreement"
    },
    "charge-geographic-description": {
      "description": "A description of the land affected by the Charge. Only one of charge-address or charge-geographic-description may be supplied.",
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "example": "1 High Street, Exeter"
    },
    "charge-address": {
      "description": "Structured address of the land affected by the Charge. Only one of charge-address or charge-geographic-description may be supplied.",
      "type": "object",
      "properties": {
        "line-1": {
          "type": "string"
        },
        "line-2": {
          "type": "string"
        },
        "line-3": {
          "type": "string"
        },
        "line-4": {
          "type": "string"
        },
        "line-5": {
          "type": "string"
        },
        "line-6": {
          "type": "string"
        },
        "postcode": {
          "type": "string",
          "pattern": "^(([Gg][Ii][Rr] 0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([A-Za-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9]?[A-Za-z]))))(| [0-9][A-Za-z]{2})))$",
          "example": "SK1 6BH"
        },
        "unique-property-reference-number": {
          "type": "integer"
        }
      },
      "required": [
        "line-1",
        "postcode",
        "unique-property-reference-number"
      ]
    },
    "charge-creation-date": {
      "description": "The date the Charge comes into effect",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "format": "date",
      "example": "2017-01-04"
    },
    "instrument": {
      "description": "The document giving rise to the Charge. Valid values can be found in /validation/instruments.py",
      "type": "string",
      "example": "Deed"
    },
    "statutory-provision": {
      "description": "The statutory provision under which the Charge has arisen. Valid values can be found in /constants/constants.py",
      "type": "string",
      "minLength": 1,
      "example": "Planning Act 2008 section 205"
    },
    "further-information-location": {
      "description": "The location - physical or virtual - where relevant documents may be inspected",
      "type": "string",
      "minLength": 1,
      "maxLength": 475,
      "example": "Council Offices, Exeter"
    },
    "further-information-reference": {
      "description": "The official reference of relevant documents",
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "example": "REF: 123"
    },
    "land-works-particulars": {
      "description": "Description of the reason why the land adjoining the retained land was compulsorily acquired. Valid only when 'charge-type' is 'Land compensation' and accompanied by 'land-sold-description'. Is a s8 Land compensation charge.",
      "type": "string",
      "minLength": 1,
      "example": "Building a new motorway"
    },
    "land-sold-description": {
      "description": "Description of the land sold by compulsory registration. Valid only when 'charge-type' is 'Land compensation' and accompanied by 'land-works-particulars'. Is a s8 Land compensation charge.",
      "type": "string",
      "minLength": 1,
      "example": "Land adjoining Buttercup Meadow, Plymouth"
    },
    "land-capacity-description": {
      "description": "A description of the capacity in which the land was acquired; e.g. freehold. Valid only when 'charge-type' is 'Land compensation' and accompanied by 'land-compensation-paid' and 'land-compensation-amount-type'. Is a s52 Land compensation charge.",
      "type": "string",
      "minLength": 1,
      "example": "Freehold, Leasehold or other"
    },
    "land-compensation-paid": {
      "description": "Amount already paid to the landowner from which the land was acquired. Valid only when 'charge-type' is 'Land compensation' and accompanied by 'land-capacity-description' and 'land-compensation-amount-type'. Is a s52 Land compensation charge.",
      "type": "string",
      "minLength": 1,
      "example": "10000.00"
    },
    "land-compensation-amount-type": {
      "description": "Valid only when 'charge-type' is 'Land compensation' is compensation paid Agreed or Estimated and accompanied by 'land-capacity-descriptiom' and 'land-compensation-paid'. Is a s52 Land compensation charge.",
      "type": "string",
      "enum": [
        "Agreed amount",
        "Estimated amount"
      ]
    },
    "originating-authority": {
      "description": "The name of the Minister of the Crown, government department, local authority or other person by whom the charge is brought into existence.",
      "type": "string",
      "minLength": 1,
      "example": "City of Exeter"
    },
    "expiry-date": {
      "description": "The date on which a Land Interest in respect of a local land charge ceases to exist.",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "format": "date",
      "example": "2017-01-04"
    },
    "amount-originally-secured": {
      "description": "The financial amount secured at the time the charge was created. Valid only when 'charge-type' is 'Financial' and 'rate-of-interest' is included.",
      "type": "string",
      "minLength": 1,
      "example": 1000
    },
    "rate-of-interest": {
      "description": "The rate of interest as a percentage payable on the amount secured, or 'Interest may be payable' or 'No interest is payable'. Valid only when 'charge-type' is 'Financial' and 'amount-originally-secured' is included.",
      "type": "string",
      "minLength": 1,
      "example": 5.5
    },
    "amount-of-compensation": {
      "description": "The total amount of compensation payable to the landowner from which the land was acquired. Valid only when 'charge-type' is 'Land compensation'",
      "type": "string",
      "minLength": 1,
      "example": "1000000.00"
    },
    "end-date": {
      "description": "The date on which Local Land Charge record is cancelled",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "format": "date",
      "example": "2017-01-04"
    },
    "cancellation-reason": {
      "description": "Reason why charge has been cancelled",
      "type": "string",
      "minLength": 1,
      "maxLength": 1500
    },
    "version-id": {
      "type": "number",
      "description": "ID which distingiushes each version of a charge during its lifecycle of changes",
      "example": 4443,
      "minLength": 1
    },
    "supplementary-information": {
      "type": "string",
      "description": "Other information relating to the charge",
      "minLength": 1,
      "maxLength": 1500,
      "example": "Application to vary condition 47 of planning permission reference number 123/123 dated 26.08.2011, enabling the addition of a split basement level"
    },
    "schema-version": {
      "type": "string",
      "description": "The current version of the schema",
      "minLength": 1,
      "example": "5.0"
    }
  }
}
