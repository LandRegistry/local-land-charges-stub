{
  "swagger": "2.0",
  "info": {
    "description": "Local Land Charges API for external systems. Allows authorised external services to Add, Amend and Retrieve Local Land Charges held by HM Land Registry.",
    "version": "0.0.6",
    "title": "Local Land Charges"
  },
  "basePath": "/v1.0",
  "tags": [
    {
      "name": "LLC",
      "description": "Local Land Charges"
    }
  ],
  "paths": {
    "/local-land-charges": {
      "post": {
        "tags": [
          "local-land-charges"
        ],
        "summary": "Add a new Local Land Charge to the Register",
        "description": "",
        "operationId": "addLLC",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Local Land Charge object to be added to the Register",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "item": {
                  "type": "object",
                  "properties": {
                    "geometry": {
                      "type": "object",
                      "description": "GeoJSON FeatureCollection of the LLC extent",
                      "properties": {
                        "features": {
                          "type": "array",
                          "items": {
                            "$ref": "#/definitions/Features"
                          }
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "FeatureCollection"
                          ]
                        }
                      }
                    },
                    "schema-version": {
                      "$ref": "#/definitions/schema-version"
                    },
                    "charge-type": {
                      "$ref": "#/definitions/charge-type"
                    },
                    "charge-sub-category": {
                      "$ref": "#/definitions/charge-sub-category"
                    },
                    "charge-address": {
                      "$ref": "#/definitions/charge-address"
                    },
                    "registration-date": {
                      "$ref": "#/definitions/registration-date"
                    },
                    "charge-creation-date": {
                      "$ref": "#/definitions/charge-creation-date"
                    },
                    "instrument": {
                      "$ref": "#/definitions/instrument"
                    },
                    "statutory-provision": {
                      "$ref": "#/definitions/statutory-provision"
                    },
                    "further-information-location": {
                      "$ref": "#/definitions/further-information-location"
                    },
                    "further-information-reference": {
                      "$ref": "#/definitions/further-information-reference"
                    },
                    "originating-authority": {
                      "$ref": "#/definitions/originating-authority"
                    },
                    "expiry-date": {
                      "$ref": "#/definitions/expiry-date"
                    },
                    "supplementary-information": {
                      "$ref": "#/definitions/supplementary-information"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "schema-version",
                    "geometry",
                    "registration-date",
                    "charge-type",
                    "further-information-location",
                    "originating-authority"
                  ]
                }
              },
              "additionalProperties": false,
              "required": [
                "item"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "version-id": {
                  "type": "string"
                },
                "land-charge-id": {
                  "type": "string"
                },
                "registration-date": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "type": "object",
              "properties": {
                "error_message": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      },
                      "details": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "error_message": {
                              "type": "string"
                            },
                            "location": {
                              "description": "The location of the erroring attribute in the JSON. '$.' is the object root",
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "error_code": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "error_message": {
                  "type": "string"
                },
                "error_code": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/local-land-charges/{land-charge-id}": {
      "get": {
